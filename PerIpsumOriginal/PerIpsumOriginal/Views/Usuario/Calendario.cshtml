@{
    ViewData["Title"] = "Calendário";
    Layout = "_LayoutSecundario";
}

<h2>Calendário</h2>
<div id="calendar"></div>

<!-- Modal para Visualizar/Editar Evento -->
<div class="modal" id="eventModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle"></h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="viewEventContent">
                    <p id="modalDescription"></p>
                    <p><strong>Link: </strong><a id="modalLink" href="#" target="_blank"></a></p>
                    <p><strong>Tipo: </strong><span id="modalTipo"></span></p>
                </div>
                <div id="editEventContent" style="display:none;">
                    <input type="hidden" id="editEventId">
                    <div class="form-group">
                        <label>Título</label>
                        <input type="text" class="form-control" id="editEventTitle">
                    </div>
                    <div class="form-group">
                        <label>Descrição</label>
                        <textarea class="form-control" id="editEventDescription"></textarea>
                    </div>
                    <div class="form-group">
                        <label>Data</label>
                        <input type="date" class="form-control" id="editEventDate">
                    </div>
                </div>
            </div>
            <div class="modal-footer" id="userEventButtons" style="display:none;">
                <button type="button" class="btn btn-danger" id="deleteEventBtn">Excluir</button>
                <button type="button" class="btn btn-primary" id="editEventBtn">Editar</button>
                <button type="button" class="btn btn-success" id="saveEventBtn" style="display:none;">Salvar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal para Criar Evento -->
<div class="modal" id="createEventModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Criar Novo Evento</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Título</label>
                    <input type="text" class="form-control" id="newEventTitle">
                </div>
                <div class="form-group">
                    <label>Descrição</label>
                    <textarea class="form-control" id="newEventDescription"></textarea>
                </div>
                <div class="form-group">
                    <label>Data</label>
                    <input type="date" class="form-control" id="newEventDate">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="createEventBtn">Criar</button>
            </div>
        </div>
    </div>
</div>
