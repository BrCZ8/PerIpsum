@model ContatoModel
@{
    ViewData["Title"] = "Contato";
}
<div style="position: fixed; top: 0; left: 0; width: 100vw; height: 100vh; background-image: url('/img/fundoContato.png'); background-size: cover; background-position: center; z-index: -1; margin-top: 100px;"></div>
<div class="containerContato">
    <main role="main" class="pb-3">
        <div class="contato-content" style="position: relative; z-index: 1; background-color: white; border-radius: 10px; padding: 40px 20px; max-width: 700px; margin: 0 auto; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); min-height: 550px;">
            <div class="contact-tag">
                <span class="arrow">></span>
                <div class="contact-info">
                    <div style="display: flex; align-items: center; margin-bottom: 5px;">
                        <img src="/img/iconeEmail.svg" alt="Ícone de Email" style="width: 20px; height: 20px; margin-right: 10px; vertical-align: middle;">
                        <p style="margin: 0;">teste123@gmail.com</p>
                    </div>
                    <div style="display: flex; align-items: center; margin-top: 15px;">
                        <img src="/img/iconeTelefone.svg" alt="Ícone de Telefone" style="width: 20px; height: 20px; margin-right: 10px; vertical-align: middle;">
                        <p style="margin: 0;">(00) 0000-0000</p>
                    </div>
                    <div style="display: flex; align-items: center; margin-top: 15px;">
                        <img src="/img/iconeLocal.svg" alt="Ícone de Local" style="width: 20px; height: 20px; margin-right: 10px; vertical-align: middle;">
                        <p style="margin: 0;">
                            Av. blah blah, 456
                            Brotas - SP
                        </p>
                    </div>
                </div>
                <h1 style="text-align: center; color: black; margin-bottom: 20px; font-family: 'BadHorse', sans-serif;">QUER FALAR COM A GENTE?</h1>
                <form asp-controller="Usuario" asp-action="AdicionarContato" method="post" enctype="multipart/form-data">
                    <div class="form-group" style="margin-bottom: 15px;">
                        <input type="text" asp-for="Nome" placeholder="Qual o seu nome?" style="color: black; padding: 8px; border: none; border-bottom: 1px solid #cccccc; border-radius: 0; box-shadow: none;" />
                    </div>
                    <div class="form-group" style="margin-bottom: 15px;">
                        <input type="email" asp-for="Email" placeholder="E-mail" style="color: black; padding: 8px; border: none; border-bottom: 1px solid #cccccc; border-radius: 0; box-shadow: none;" />
                    </div>
                    <div class="form-group" style="margin-bottom: 20px;">
                        <label asp-for="Problema" style="color: black; font-family: 'Krub', sans-serif; margin-bottom: 10px; display: block;">Qual o problema?</label>
                        <textarea asp-for="Problema" class="form-control" placeholder="Descreva ele aqui!" rows="6" style="color: black; padding: 8px; border: 2px solid #cccccc; border-radius: 5px; box-shadow: none;" />
                    </div>

                    <div style="display: flex; justify-content: center; margin-top: 15px;">
                        <button type="submit" class="btn" style="width: 40%; background-color: #009846; color: white; font-weight: bold; padding: 12px; font-size: 16px; border-radius: 5px;">Enviar</button>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>